<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    >

	<FrameLayout
	    android:id="@+id/frameLayout1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:gravity="center_vertical|center_horizontal">
	    
		<ImageView
		        
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        android:padding="15dip"
		        android:minWidth="500dp"
		        android:src="@drawable/icon" 
		        android:layout_margin="15dip" />
	</FrameLayout>
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="bottom"
    >
   		<Button
	    android:id="@+id/bigBookButton"
	    android:text="Big Book"       
	    android:textColor="#FFFFFF"
    
	    android:layout_width="150dip"
	    android:layout_height="wrap_content"
	  	android:layout_gravity="right"
	    android:background="@android:color/transparent"
	    android:drawableTop="@drawable/ic_tab_artists_white"
	    android:textSize="18dip" 
	    android:drawablePadding="10dp"
	    
	    android:layout_marginBottom="15dip"
	    android:layout_marginTop="50dip"
	    android:layout_marginLeft="15dip"
	    />

   		<Button
   		android:layout_toRightOf="@+id/bigBookButton"
	    android:id="@+id/joeButton"
	    android:layout_width="150dip"
	    android:layout_height="wrap_content"
	    android:background="@android:color/transparent"
	    android:drawableTop="@drawable/ic_tab_artists_white"
	    android:drawablePadding="10dip"
	    android:textSize="18dip" 
   	  	android:layout_gravity="right"
	    android:text="Joe and Charlie"	 
android:textColor="#FFFFFF"
    
	    android:layout_marginTop="50dip"
	    android:layout_marginRight="5dip"
	    android:layout_marginLeft="15dip"
	    android:layout_marginBottom="15dip"
	    android:focusable="true"
	    />
<!--android:background="#333333" android:textColor="#FFFFFF"-->

   	<Button
   	    android:layout_below="@+id/bigBookButton"
   	    android:id="@+id/oldTimersButton"
   	    android:layout_width="150dip"
	    android:layout_height="wrap_content"
	    android:focusable="true"
	    android:drawableTop="@drawable/ic_tab_artists_white"
	    android:text="Old Timers"
android:textColor="#FFFFFF"

   	    android:textSize="18dip"
   	    android:background="@android:color/transparent"
	    android:drawablePadding="10dp"
	    android:paddingTop="50dip"
	    	  	android:layout_gravity="right"
	    	  	
	    android:layout_marginBottom="15dip"

	    android:layout_marginLeft="15dip"
	    
   	/>
   	
<Button
   	    android:layout_below="@+id/joeButton"
   	    android:id="@+id/playerButton"
   	    android:layout_toRightOf="@+id/oldTimersButton"
   	    android:layout_width="150dip"
	    android:layout_height="wrap_content"
	    android:focusable="true"
	    android:drawableTop="@drawable/dark_social_share"
	    android:text="Social Share"
android:textColor="#FFFFFF"

   	    android:textSize="18dip"
   	    android:background="@android:color/transparent"
	    android:drawablePadding="10dp"
	    android:paddingTop="50dip"
	    	  	android:layout_gravity="right"
	    	  	
	    android:layout_marginBottom="15dip"

	    android:layout_marginLeft="15dip"
	    
   	/>
   		
</RelativeLayout>
</LinearLayout>
</ScrollView>